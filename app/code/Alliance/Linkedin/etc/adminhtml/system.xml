            <tab>linkedin</tab>
            <resource>Alliance_Linkedin::config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1">
                <label>General</label>
                <field id="visibility" translate="Module" type="select" sortOrder="30" showInDefault="1" showInWebsite="1">
                    <label>Field Visibility</label>
                     <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="required" translate="Module" type="select" sortOrder="30" showInDefault="1" showInWebsite="1">
                    <label>Required</label>
                     <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
